<%- include('../includes/head.ejs') %>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #000000, #2d2d2d);
        color: #fff;
    }

    .main-content {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        position: relative;
        overflow: hidden;
    }

    .main-content::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255, 0, 0, 0.15), transparent);
        transform: translate(-50%, -50%) rotate(0deg);
        animation: pulse 6s infinite linear;
    }

    @keyframes pulse {
        0% {
            transform: translate(-50%, -50%) rotate(0deg);
        }
        100% {
            transform: translate(-50%, -50%) rotate(360deg);
        }
    }

    .form-container {
        position: relative;
        width: 100%;
        max-width: 400px;
        background: rgba(25, 25, 25, 0.9);
        backdrop-filter: blur(10px);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(255, 0, 0, 0.4);
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

    .form-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(255, 0, 0, 0.6);
    }

    .form-container h1 {
        font-size: 28px;
        font-weight: 700;
        color: #ff4545;
        text-align: center;
        margin-bottom: 20px;
        text-transform: uppercase;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-size: 14px;
        color: #bbb;
        margin-bottom: 5px;
        display: block;
    }

    .form-group input {
        width: 100%;
        padding: 12px;
        font-size: 14px;
        color: #fff;
        background: rgba(50, 50, 50, 0.8);
        border: 1px solid #444;
        border-radius: 8px;
        outline: none;
        transition: border-color 0.3s, background-color 0.3s;
    }

    .form-group input:focus {
        border-color: #ff4545;
        background-color: rgba(50, 50, 50, 1);
        box-shadow: 0 0 8px rgba(255, 0, 0, 0.5);
    }

    .form-group button {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        color: #fff;
        background: linear-gradient(90deg, #ff4545, #d10000);
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: background 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
    }

    .form-group button:hover {
        background: linear-gradient(90deg, #d10000, #ff4545);
        transform: scale(1.05);
        box-shadow: 0 8px 15px rgba(255, 0, 0, 0.5);
    }

    .form-footer {
        text-align: center;
        margin-top: 15px;
        font-size: 14px;
        color: #aaa;
    }

    .form-footer a {
        color: #ff4545;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .form-footer a:hover {
        color: #fff;
    }

    /* Scary animated glow effect */
    .main-content::after {
        content: "ADMIN PANEL";
        position: absolute;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 8rem;
        color: rgba(255, 0, 0, 0.05);
        text-shadow: 0 0 20px rgba(255, 0, 0, 0.3);
        pointer-events: none;
        animation: flicker 4s infinite alternate ease-in-out;
    }

    @keyframes flicker {
        0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% {
            opacity: 1;
        }
        20%, 24%, 55% {
            opacity: 0.4;
        }
    }
</style>
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<div class="main-content" id="mainContent">
    <div class="form-container">
        <h1>Admin Login</h1>
        <form action="/admin/login" method="POST">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
            </div>
            <div class="form-group">
                <button type="submit">Sign In</button>
            </div>
        </form>
        <div class="form-footer">
            Forgot your password? <a href="/reset-password">Reset it here</a>
        </div>
    </div>
</div>

<%- include('../includes/end.ejs') %>
